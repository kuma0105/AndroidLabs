<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.rajatkumar.androidlabs.WeatherForecast">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/weatherImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/currentTemp"
        style="@style/textViewStyle"
        android:layout_alignTop="@+id/weatherImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="TextView"
        android:textSize="55dp" />

    <TextView
        android:id="@+id/minTemp"
        style="@style/textViewStyle"
        android:layout_below="@+id/currentTemp"
        android:layout_marginTop="40dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/maxTemp"
        style="@style/textViewStyle"
        android:layout_below="@+id/minTemp"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/windSpeed"
        style="@style/textViewStyle"
        android:layout_alignStart="@+id/minTemp"
        android:layout_below="@+id/maxTemp"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/location"
        style="@style/textViewStyle"
        android:layout_below="@+id/windSpeed"
        android:layout_marginTop="84dp"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:layout_alignParentStart="false"
        android:text="TextView" />


</RelativeLayout>
